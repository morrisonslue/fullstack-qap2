<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Math Quiz - Home</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="main-content index_container">
    <h1>Welcome to the amazing Math Quiz!</h1>
    <% if (msg === 'incorrect') { %>
      <p class="feedback-incorrect">You got it wrong. Try again!</p>
    <% } else if (msg === 'finished') { %>
      <p class="feedback-correct">You finished your quiz session!</p>
    <% } %>
    <h2>High Scores</h2>
    <% if (leaderboard.length === 0) { %>
      <p>No high scores recorded yet!</p>
    <% } else { %>
      <ol class="scoreboard-list">
        <% leaderboard.forEach(function(entry) { %>
          <li>
            <strong>Streak:</strong> <%= entry.streak %>
            <br />
            <em>Achieved at <%= entry.time %></em>
          </li>
        <% }); %>
      </ol>
    <% } %>
    <div style="margin-top: 2rem;">
      <form action="/quiz" method="get">
        <button type="submit" class="big-btn">
          Start a New Quiz
        </button>
      </form>
    </div>
  </div>
</body>
</html>


