<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Leaderboard</title>
  <link rel="stylesheet" href="/public/styles.css">
</head>
<body>
  <h1>Leaderboard</h1>
  <% if (leaderboard.length === 0) { %>
    <p>Waiting for some high scores!</p>
  <% } else { %>
    <ol>
      <% leaderboard.forEach(function(entry) { %>
        <li>
          <strong>Streak:</strong> <%= entry.streak %> 
          (achieved at <%= entry.time %>)
        </li>
      <% }); %>
    </ol>
  <% } %>
  <form action="/" method="get">
    <button type="submit">Return Home</button>
  </form>
</body>
</html>
